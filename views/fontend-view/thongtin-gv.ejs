						<form class="form-horizontal" action="/thongtin/editgv" enctype="multipart/form-data" method="post">
							<h4 class="mb-xlg">Thông tin giảng viên</h4>
							<fieldset>

								<!-- Mã giảng viên -->
								<div class="form-group">
								  <label class="col-md-3 control-label" for="TeacherCode">Mã giảng viên</label>
								  <div class="col-md-8">
								    <input value="<%= user[0].TeacherCode %>"
								           type="text"
								           class="form-control"
								           name="StudentCode"
								           required="required"
								           disabled>
								  </div>
								</div>

								<!-- Họ và tên -->
								<div class="form-group">
								  <label class="col-md-3 control-label" for="Name">Họ và Tên</label>
								  <div class="col-md-8">
								    <input value="<%= user[0].Name %>"
								           type="text"
								           class="form-control"
								           name="Name"
								           required="required">
								  </div>
								</div>

								<!-- Ngày sinh -->
								<div class="form-group">
								  <label class="col-md-3 control-label" for="BirthDay">Ngày sinh</label>
								  <div class="col-md-8">
								    <input value="<%= user[0].BirthDay %>"
								           type="date"
								           class="form-control"
								           name="BirthDay"
								           required="required">
								  </div>
								</div>

								<!-- Giới tính -->
								<div class="form-group">
								  <label class="col-md-3 control-label" for="Sex">Giới tính</label>
								  <div class="col-md-8">
								    <select name="Sex" class="form-control">
								        <option value="<%= user[0].Sex %>">
								            <% if ((user[0].Sex)=="1"){ %>
								                Nam
								            <% } else { %>
								                Nữ
								            <% } %>
								        </option>
								        <option value="1">Nam</option>
								        <option value="0">Nữ</option>
								    </select>
								  </div>
								</div>

								<!-- Địa chỉ -->
								<div class="form-group">
								  <label class="col-md-3 control-label" for="Address">Địa chỉ</label>
								  <div class="col-md-8">
								    <input value="<%= user[0].Address %>"
								           type="text"
								           class="form-control"
								           name="Address"
								           required="required">
								  </div>
								</div>

								<!-- Số điện thoại -->
								<div class="form-group">
								  <label class="col-md-3 control-label" for="PhoneNumber">Số điện thoại</label>
								  <div class="col-md-8">
								    <input value="<%= user[0].PhoneNumber %>"
								           type="number"
								           class="form-control"
								           name="PhoneNumber"
								           required="required">
								  </div>
								</div>

								<!-- Gmail -->
								<div class="form-group">
								  <label class="col-md-3 control-label" for="Email">Gmail</label>
								  <div class="col-md-8">
								    <input value="<%= user[0].Email %>"
								           type="gmail"
								           class="form-control"
								           name="Email"
								           required="required">
								  </div>
								</div>

							</fieldset>
							<hr class="dotted tall">
							<h4 class="mb-xlg">Mô tả bản thân</h4>
							<fieldset>

								<div class="form-group">
									<label class="col-md-3 control-label" for="profileBio">Ảnh đại diện</label>
									<div class="col-md-8">
										<div class="thumbnail-gallery">
											<a class="img-thumbnail lightbox" href="img/<%= user[0].Avatar %>" data-plugin-options='{ "type":"image" }'>
